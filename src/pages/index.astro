---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="IDEACREW - Strategy & Technology Solutions" fullWidth={true}>
  <div class="bg-image absolute inset-0 z-0"></div>
  <div class="relative z-10 flex items-center justify-center min-h-[calc(100vh-4rem)]">
    <div class="absolute inset-0">
      <svg class="w-full h-full" viewBox="0 0 1000 1000" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
            <circle cx="1" cy="1" r="1" fill="#3B82F6" fill-opacity="0.1" />
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" />
        <path d="M0,500 Q250,300 500,500 T1000,500" fill="none" stroke="#3B82F6" stroke-width="2" stroke-opacity="0.2" />
      </svg>
    </div>

    <div class="text-center z-10 px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-6 max-w-3xl mx-auto">
        Strategy & technology solutions that help our clients solve their most important challenges
      </h1>
      <div class="flex justify-center space-x-4">
        <button class="bg-white text-blue-600 border border-blue-600 px-6 py-2 rounded-md hover:bg-blue-50 transition duration-300">
          Get in Touch
        </button>
        <button class="bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition duration-300">
          State-Based Marketplace
        </button>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  .bg-image {
    background-image: url('/background.webp');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
</style>
