---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Contact Us | IDEACREW">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-4">Contact Us</h1>
    <p class="mb-6">Get in touch with us for any inquiries or support.</p>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <h2 class="text-xl font-semibold mb-2">Contact Information</h2>
        <p>Email: info@ideacrew.com</p>
        <p>Phone: (123) 456-7890</p>
        <p>Address: 123 Tech Street, Innovation City, ST 12345</p>
      </div>
      <div>
        <h2 class="text-xl font-semibold mb-2">Send us a message</h2>
        <form class="space-y-4">
          <div>
            <label for="name" class="block mb-1">Name</label>
            <input type="text" id="name" name="name" class="w-full p-2 border rounded" required>
          </div>
          <div>
            <label for="email" class="block mb-1">Email</label>
            <input type="email" id="email" name="email" class="w-full p-2 border rounded" required>
          </div>
          <div>
            <label for="message" class="block mb-1">Message</label>
            <textarea id="message" name="message" rows="4" class="w-full p-2 border rounded" required></textarea>
          </div>
          <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</MainLayout>