---
import { Image } from 'astro:assets'
import { Button } from '@/components/ui/button'

interface Props {
	heading?: string
	buttonText?: string
	buttonLink?: string
	backgroundImage?: string
}

const {
	heading = 'Ready to work together?',
	buttonText = 'Contact Us',
	buttonLink = '/contact',
	backgroundImage = '/image_1.png',
} = Astro.props
---

<section class="relative py-20">
	<div class="bg-image absolute inset-0 z-0 bg-blue-700">
		<Image
			src={backgroundImage}
			alt="Background"
			width={1920}
			height={1080}
			class="w-full h-full object-cover opacity-75"
		/>
	</div>
	<div class="relative z-10 container flex justify-between items-center max-w-[960px] mx-auto w-full">
		<h2 class="cta-heading text-white">{heading}</h2>
		<Button
			variant="outline"
			size="lg"
		>
			<a href={buttonLink}>{buttonText}</a>
		</Button>
	</div>
</section>

<style>
	.cta-heading {
		font-family: Domine;
		font-size: 48px;
		font-style: normal;
		font-weight: 400;
		line-height: normal;
	}
</style>
